# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


#Login
POST        /app/login              @controllers.login.LoginController.login

#Logout
POST        /app/logout             @controllers.login.LoginController.logout

#Sign Up
POST        /app/register           @controllers.signup.SignUpController.register

# Comment
GET         /app/commentList        @controllers.comment.CommentController.list(page: Option[Int])
POST        /app/createComment      @controllers.comment.CommentController.create

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file           controllers.Assets.versioned(path="/public", file: Asset)
